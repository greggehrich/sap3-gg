<h1 align="center">Individual Story Page</h1>

<h2>Story: <%= @story.editor_tagline %></h2>

<br>

<% if user_signed_in? %>
  <% if story_saved?(@story.id,current_user.id) %>
    <p class="story-actions-links story-actions" id="forget_story">
        <%= link_to "FORGET THIS STORY", "javascript:void(0)", class: 'forget_story_link', 'data-story-id' => @story.id %>
    </p>
  <% else %>
    <p style="color:red;text-align:center" class="story-actions-links story-actions" id="save_story">
      <%= link_to "SAVE THIS STORY TO YOUR PROFILE", "javascript:void(0)", class: 'save_story_link', 'data-story-id' => @story.id %>
    </p>
  <% end %>
<% else %>
  <p style="color:red;text-align:center" class="story-actions-links story-actions" id="save_story">
    <%= link_to "SAVE THIS STORY TO YOUR PROFILE", "javascript:void(0)", class: 'cannot_save_story_link' %>
  </p>
<% end %>

<div class="container-fluid">
<div class="row">
<!--<div class="table-responsive"> -->
  <table class ="table table-bordered table-hover">
  <tr>
    <div class="col-sm-4 col-sm-push-8"><td colspan="2"><%= @description %> </td> </div>
    <div class="col-sm-8 col-sm-pull-4"><td rowspan="8"><img src= "<%= @images.first.src_url %>" ></img> </td> </div>
  </tr>
  <tr>
    <td colspan="2" bgcolor="orange"><a href="<%= @urls.first.url_full %>"> To read the full story click here...</a> </td>
  </tr>
  <tr>
    <th>Published By:</th>
    <td><a href="<%=@publisher.url_full%>"><%= @publisher.title %></a> </td>
  </tr>
  <tr>
    <th>Authored By:</th>
    <td><%= @story.author %></td>
  </tr>
  <tr>
    <th>Published Date:</th>
    <td><%= @story.story_month %> /
        <%= @story.story_date %> /
        <%= @story.story_year %>&nbsp;
        </td>
  </tr>
  <tr>
    <th>Location(s):</th>
    <td><%= @story.locations.map { |location| location.name }.to_sentence %></td>
  </tr>
  <tr>
    <th>Place Category/Categories:</th>
    <td><%= @story.place_categories.map { |place_category| place_category.name }.to_sentence %></td>
  </tr>
  <tr>
    <th>Story Category/Categories:</th>
    <td><%= @story.story_categories.map { |story_category| story_category.name }.to_sentence %></td>
  </tr>
</table>

</div>
</div>
</div>
<br>
<br>