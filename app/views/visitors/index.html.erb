<% if false %>
    <% if user_signed_in? %>
        <% if current_user.admin? %>
            <h3>Admin</h3>
            <p><%= link_to 'User count:', users_path %> <%= User.count %></p>
        <% else %>
            <h3>You've signed up. Download a free book.</h3>
            <%= link_to 'Download PDF', products_path('product.pdf'), :class => 'btn btn-success btn-large' %>
        <% end %>
    <% else %>
        <h3>Sign up and download a free book.</h3>
        <%= link_to 'Sign up', new_user_registration_path, :class => 'btn btn-primary btn-large' %>
    <% end %>
<% end %>

<div class="jumbotron text-center">
  <p class="text-primary" style="line-height: 120%; display:inline">Our mission is to provide professionally written and <br>
    curated stories as an alternative to user-contributed content<br>
    about places to eat, drink, stay, and enjoy life</p>
</div>

<div class="container">
  <div class="row">
        <% @stories.each do |story| %>
            <div class="col-lg-4 text-left">

                <% story.urls.each do |u| %>

                    <% u.images.each do |i| %>
                        <%= link_to image_tag(i.src_url, :height =>200), u.url_full, target: '_blank' %>
                    <% end %><em>
                  <% if story.author.present? %>
                    by <%= story.author %>&nbsp;&nbsp;
                  <% end %>
                  <% slash_date = "#{story.story_month}/#{story.story_date}/#{story.story_year}" %>
                  <%= "#{slash_date}" %></em><br>
                  <% if story.editor_tagline.present? %>
                    <span class="text-muted" style="font-weight: bold"><%= story.editor_tagline %></span><br>
                  <% end %>
                  <span style="font-size:1.2em">
                  <%= u.url_title %><br>
                  </span>
                <% end %><br>
            </div>
        <% end %>
  </div>
</div>