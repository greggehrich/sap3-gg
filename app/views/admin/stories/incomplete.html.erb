<div class="container">
  <div class="jumbotron bg-white admin-stories">
    <div class="header text-center">
      <h4><i class="fas fa-edit mr-1"></i> Incomplete Stories</h4>
    </div>

    <hr class="my-4">

    <div class="table-div">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">Image</th>
            <th scope="col">Title</th>
            <th scope="col">Publisher/Date</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @stories.each do |story| %>
            <tr>
              <td class="story-image">
                <%= link_to image_tag(story.latest_image.src_url, class: "grid-image"), story_path(story.permalink), target: '_blank' %>
              </td>
              <th style="width: 200px;"><%= link_to story.latest_url&.url_title, story.latest_url&.encoded_url, target: '_blank', class: 'text-dark' %></th>
              <td style="width: 200px;"><%= story.media_owner_and_date_line || '-' %></td>
              <td style="width: 200px;">
                <%= link_to story_path(story.permalink), class: "btn btn-sm btn-outline-primary m-1 w-100", target: '_blank' do %>
                  <i class="fas fa-search mr-1"></i> View Story
                <% end %>
                <%= link_to edit_admin_story_path(story), class: "btn btn-sm btn-outline-warning m-1 w-100", target: '_blank' do %>
                  <i class="fas fa-edit mr-1"></i> Edit Story
                <% end %>
                <%= button_to admin_story_path(story), method: :delete, class: "btn btn-sm btn-outline-danger m-1 w-100", data: { confirm: 'Are you sure?' }, target: '_blank' do %>
                  <i class="fas fa-times mr-1"></i> Delete Story
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <hr class="my-4">

    <div class='pagination'>
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
</div>
