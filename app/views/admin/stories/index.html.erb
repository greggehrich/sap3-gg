<div class="container">
  <div class="story-links mb-2 text-right">
    <%= link_to initialize_scraper_admin_stories_path, class: "btn btn-sm btn-success" do %>
      <i class="fas fa-plus mr-1"></i> Add New Story
    <% end %>
    <%= link_to incomplete_admin_stories_path, class: "btn btn-sm btn-info" do %>
      <i class="fas fa-edit mr-1"></i> Incomplete Stories
    <% end %>
    <%= link_to sequence_admin_stories_path, class: "btn btn-sm btn-secondary" do %>
      <i class="fas fa-sort-numeric-down mr-1"></i> Sequencer
    <% end %>
  </div>

  <div class="jumbotron bg-white admin-stories">
    <div class="header text-center">
      <h4>Stories</h4>
    </div>

    <hr class="my-4">

    <%= render partial: 'shared/filters', locals: { filter_path: admin_stories_path } %>

    <hr class="my-4">

    <div class="table-div">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">Image</th>
            <th scope="col">Title</th>
            <th scope="col">Publisher/Date</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @stories.each do |story| %>
            <tr>
              <td class="story-image">
                <%= link_to image_tag(story.latest_image.src_url, class: "grid-image"), story_path(story.permalink), target: '_blank' %>
              </td>
              <th style="width: 200px;"><%= link_to story.latest_url&.url_title, story.latest_url&.encoded_url, target: '_blank', class: 'text-dark' %></th>
              <td style="width: 200px;"><%= story.media_owner_and_date_line || '-' %></td>
              <td style="width: 200px;">
                <%= link_to story_path(story.permalink), class: "btn btn-sm btn-primary", target: '_blank' do %>
                  <i class="fas fa-search mr-1"></i> View Story
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <hr class="my-4">

    <div class='pagination'>
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
</div>
