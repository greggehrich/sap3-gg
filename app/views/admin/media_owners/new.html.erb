<div class="container">
  <%= form_tag(admin_media_owners_path, method: :post, multipart: true) do %>
    <div class="jumbotron bg-white admin-form">
      <div class="header text-center">
        <h4><i class="fas fa-address-card mr-1"></i> Upload Media Owners CSV</h4>
      </div>

      <hr class="my-4">

      <div class="body">
        <div class="custom-file text-center">
          <%= file_field_tag :file, accept: 'csv', class: '' %>
        </div>
        <small class="form-text text-muted text-center">
          The CSV format will have two columns. Column 1 => header: 'title', ie: 'House Beautiful'. Column 2 => header: 'url_domain', ie: 'housebeautiful.com'.
        </small>
        <hr class="my-4">

        <div class="actions">
          <%= submit_tag "Upload", class: 'btn btn-md btn-primary text-center w-100' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
