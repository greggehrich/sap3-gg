<div class="container-fluid">
  <div class="jumbotron bg-white admin-index-page">
    <div class="header text-center">
      <h4><i class="fas fa-users mr-1"></i> Users</h4>
    </div>

    <hr class="my-4">

    <%= render partial: 'filters', locals: { filter_path: admin_users_path } %>

    <hr class="my-4">

    <div class="table-div">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
            <th scope="col">City Preference</th>
            <th scope="col">Created At</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.first_name.titleize %></td>
              <td><%= user.last_name.titleize %></td>
              <td><%= user.email %></td>
              <td><%= user.role.titleize %></td>
              <td><%= user.city_preference %></td>
              <td><%= pretty_date_format(user.created_at) %></td>
              <td class="action-links">
                <%= link_to edit_admin_user_path(user), class: "btn btn-sm btn-outline-warning" do %>
                  <i class="fas fa-edit"></i>
                <% end %>
                <%= link_to admin_user_path(user), method: :delete, class: "btn btn-sm btn-outline-danger delete-link", data: { confirm: 'Are you sure?' }, target: '_blank' do %>
                  <i class="fas fa-times"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <hr class="my-4">

    <div class='pagination'>
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
</div>
