<div class="container">
  <div class="jumbotron bg-white admin-index-page">
    <div class="header text-center">
      <h4><i class="fas fa-address-card mr-1"></i> Media Owners</h4>
    </div>

    <hr class="my-4">

    <%= render partial: 'filters', locals: { filter_path: admin_mediaowners_path } %>

    <hr class="my-4">

    <div class="table-div">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Url Domain</th>
            <th scope="col">Owner Name</th>
            <th scope="col">Distribution Type</th>
            <th scope="col">Paywall?</th>
            <th scope="col">Created At</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @owners.each do |owner| %>
            <tr>
              <td><%= owner.id %></td>
              <td><%= owner.title %></td>
              <td><%= owner.url_domain %></td>
              <td><%= owner.owner_name %></td>
              <td><%= owner.distribution_type %></td>
              <td><%= owner.paywall_yn %></td>
              <td><%= pretty_date_format(owner.created_at) %></td>
               <td style="width: 200px;">
                <%= link_to edit_admin_mediaowner_path(owner), class: "btn btn-sm btn-outline-warning m-1 w-100" do %>
                  <i class="fas fa-edit mr-1"></i> Edit Owner
                <% end %>
                <%= button_to admin_mediaowner_path(owner), method: :delete, class: "btn btn-sm btn-outline-danger m-1 w-100", data: { confirm: 'Are you sure?' } do %>
                  <i class="fas fa-times mr-1"></i> Delete Owner
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <hr class="my-4">

    <div class='pagination'>
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
</div>
