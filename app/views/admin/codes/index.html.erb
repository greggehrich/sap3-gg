<div class="container">
  <div class="jumbotron bg-white admin-index-page">
    <div class="header text-center">
      <h4>Codes</h4>
    </div>

    <hr class="my-4">

    <%= render partial: 'filters', locals: { filter_path: admin_codes_path } %>

    <hr class="my-4">

    <div class="table-div">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Code Type</th>
            <th scope="col">Code Key</th>
            <th scope="col">Code Value</th>
            <th scope="col">Created At</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @codes.each do |code| %>
            <tr>
              <td><%= code.id %></td>
              <td><%= code.code_type %></td>
              <td><%= code.code_key %></td>
              <td><%= code.code_value %></td>
              <td><%= pretty_date_format(code.created_at) %></td>
               <td style="width: 200px;">
                <%= link_to edit_admin_code_path(code), class: "btn btn-sm btn-outline-warning m-1 w-100" do %>
                  <i class="fas fa-edit mr-1"></i> Edit Code
                <% end %>
                <%= button_to admin_code_path(code), class: "btn btn-sm btn-outline-danger m-1 w-100", data: { confirm: 'Are you sure?' } do %>
                  <i class="fas fa-times mr-1"></i> Delete Code
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <hr class="my-4">

    <div class='pagination'>
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
</div>
