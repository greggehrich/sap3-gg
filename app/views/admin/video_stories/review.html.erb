<div class="container-fluid">
  <div class="header text-center">
    <h4><i class="fas fa-book mr-1"></i> Review Story</h4>
  </div>
  <div class="grid story-grid">
    <div class="grid-sizer"></div>
    <div class="gutter-sizer"></div>
      <div class="grid-item grid-card card">
        <div class="card-body">
          <div class="tagline-div-<%= @video_story.id %>">
            <% if @video_story.title %>
              <h6 class="card-title text-center font-italic font-bold"><%= @video_story.editor_tagline %></h6>
            <% end %>
          </div>

          <hr>

          <h5 class="text-center story-title"><%= link_to @video_story.title, @video_story.video_url, target: '_blank', class: 'text-dark' %></h5>

          <p class="url-desc">
            <%= truncate(@video_story.description, length: 100, omission: '...  ' ) { link_to "Read more", admin_video_story_path(@video_story.id), target: '_blank', class: 'read-more-link' } %>
          </p>

          <hr>

          <div class="row">
            <div class="col-12 text-center links-div" id=<%= @video_story.id %>>
              <% if current_user %>
                <p class="save-story-link save-story-link-<%= @video_story.id %>" id=<%= @video_story.id %>>
                  <%= link_to "javascript:void(0)", id: @video_story.id, class: "btn btn-sm btn-primary grid-item-save-story-#{@video_story.id}" do %>
                    <i class="fas fa-bookmark mr-1"></i> Save Story
                  <% end %>
                </p>
              <% else %>
                <p class="login-to-save-story-link login-to-save-story-link-<%= @video_story.id %>" id=<%= @video_story.id %>>
                  <%= link_to "javascript:void(0)", id: @video_story.id, class: "btn btn-sm btn-primary grid-item-login-to-save-story-#{@video_story.id}" do %>
                    <i class="fas fa-bookmark mr-1"></i> Save Story
                  <% end %>
                </p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="grid-item grid-card card">
        <div class="card-body">
            <div class="header text-center">
              <h4>Modify Story</h4>
            </div>

            <hr class="my-4">

            <div class="body">
              <%= form_with(model: @video_story, url: review_update_admin_story_path(@video_story)) do |f| %>
                <div class="form-group my-4 max-vw-80 mx-auto">
                  <%= f.label :desc_length, "Description Length:" %>
                  <%= f.number_field :desc_length, class: 'form-control' %>
                </div>

                <div class="sign-in-row mt-4 mx-auto text-center">
                  <%= submit_tag "Submit", class: "w-100 btn btn-sm btn-primary" %>
                </div>
              <% end %>

              <hr class="my-4">

              <%= link_to edit_admin_story_path(@video_story), class: "w-100 btn btn-sm btn-warning" do %>
                <i class="fas fa-edit mr-1"></i> More Fields to Edit
              <% end %>
            </div>
        </div>
      </div>
      <div class="grid-item grid-card card">
        <div class="card-body">
          <div class="header text-center">
            <h4>Choose Story State</h4>
          </div>

          <hr class="my-4">
          <p class="lead text-center">Current Story State: <br><strong><%= @video_story.state.titleize %></strong></p>


          <div class="body text-center">
            <div class="form-group my-4 mx-auto">
              <%= button_to update_state_admin_story_path(@video_story, state: 'draft'), method: :patch, class: "w-100 btn btn-sm btn-secondary" do %>
                <i class="fas fa-pencil-ruler mr-1"></i> Draft
              <% end %>
            </div>
            <div class="form-group my-4 mx-auto">
              <%= button_to update_state_admin_story_path(@video_story, state: 'approved'), method: :patch, class: "w-100 btn btn-sm btn-success" do %>
                <i class="fas fa-check mr-1"></i> Approved
              <% end %>
            </div>
            <div class="form-group my-4 mx-auto">
              <%= button_to update_state_admin_story_path(@video_story, state: 'published'), method: :patch, data: { confirm: 'Are you sure?' }, class: "w-100 btn btn-sm btn-primary" do %>
                <i class="fas fa-upload mr-1"></i> Published
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
