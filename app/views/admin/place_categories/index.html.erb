<div class="container">
  <div class="jumbotron bg-white admin-index-page">
    <div class="header text-center">
      <h4>Place Categories</h4>
    </div>

    <hr class="my-4">

    <%= render partial: 'filters', locals: { filter_path: admin_place_categories_path } %>

    <hr class="my-4">

    <div class="table-div">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Code</th>
            <th scope="col">Created At</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.id %></td>
              <td><%= category.name %></td>
              <td><%= category.code %></td>
              <td><%= pretty_date_format(category.created_at) %></td>
               <td style="width: 200px;">
                <%= link_to edit_admin_place_category_path(category), class: "btn btn-sm btn-outline-warning m-1 w-100" do %>
                  <i class="fas fa-edit mr-1"></i> Edit Category
                <% end %>
                <%= button_to admin_place_category_path(category), class: "btn btn-sm btn-outline-danger m-1 w-100", data: { confirm: 'Are you sure?' } do %>
                  <i class="fas fa-times mr-1"></i> Delete Category
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <hr class="my-4">

    <div class='pagination'>
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
</div>
