<div class="container">
  <%= form_for(@image, url: admin_image_path(@image)) do |f| %>
    <div class="jumbotron bg-white admin-form">
      <div class="header text-center">
        <h4><i class="fas fa-images mr-1"></i> Edit Image</h4>
      </div>

      <hr class="my-4">

      <div class="body">
        <p class="lead text-center">Preview Image</p>
        <div style="text-align: center;"><%= image_tag @image.src_url, style: 'width: 300px;' %></div>

        <div class="form-group my-4 max-vw-80 mx-auto">
          <%= f.label :src_url %><br>
          <%= f.text_field :src_url, class: "form-control" %>
        </div>
        <div class="form-group my-4 max-vw-80 mx-auto">
          <%= f.label :alt_text %><br>
          <%= f.text_field :alt_text, class: "form-control" %>
        </div>
        <div class="form-group my-4 max-vw-80 mx-auto">
          <%= f.label :image_width %><br>
          <%= f.text_field :image_width, class: "form-control" %>
        </div>
        <div class="form-group my-4 max-vw-80 mx-auto">
          <%= f.label :image_height %><br>
          <%= f.text_field :image_height, class: "form-control" %>
        </div>
          <div class="form-group my-4 max-vw-80 mx-auto">
          <%= f.label :manual_enter %><br>
          <%= f.check_box :manual_enter %>
        </div>

        <hr class="my-4">

        <div class="actions">
          <%= f.submit "Save", class: 'btn btn-md btn-primary text-center w-100' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
