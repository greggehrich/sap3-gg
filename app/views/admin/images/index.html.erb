<div class="container">
  <div class="jumbotron bg-white admin-index-page">
    <div class="header text-center">
      <h4><i class="fas fa-images mr-1"></i> Images</h4>
    </div>

    <hr class="my-4">

    <%= render partial: 'filters', locals: { filter_path: admin_images_path } %>

    <hr class="my-4">

    <div class="table-div">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Url Id</th>
            <th scope="col">Image Preview</th>
            <th scope="col">Alt Text</th>
            <th scope="col">Created At</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @images.each do |image| %>
            <tr>
              <td><%= image.id %></td>
              <td><%= image.url_id %></td>
              <td class="width-200"><%= image_tag image.src_url, class: 'table-img' %></td>
              <td><%= image.alt_text %></td>
              <td class="width-200"><%= pretty_date_format(image.created_at) %></td>
               <td class="width-200">
                <%= link_to edit_admin_image_path(image), class: "btn btn-sm btn-outline-warning m-1 w-100" do %>
                  <i class="fas fa-edit mr-1"></i> Edit image
                <% end %>
                <%= button_to admin_image_path(image), method: :delete, class: "btn btn-sm btn-outline-danger m-1 w-100", data: { confirm: 'Are you sure?' } do %>
                  <i class="fas fa-times mr-1"></i> Delete image
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <hr class="my-4">

    <div class='pagination'>
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
</div>
