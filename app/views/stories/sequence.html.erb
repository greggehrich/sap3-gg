<h1>Complete Unpublished Stories List</h1>

<table class="table table-condensed">
  <thead>
  <tr>
    <th>ID&nbsp;</th>
    <th>Created&nbsp;</th>
    <th style="text-align: center">Sequence&nbsp;</th>
    <th>Re-Seq&nbsp;</th>
    <th>Title&nbsp;&nbsp;</th>
    <th colspan="5"></th>
  </tr>
  </thead>

  <tbody>
  <% @stories.each do |story| %>
    <% story.urls.each do |u| %>
      <tr>
        <td><%= story.id %>&nbsp;</td>
        <td nowrap><%= story.created_at.strftime("%Y-%m-%d %H:%M:%S") %> &nbsp;</td>
        <td style="text-align: center"><%= story.release_seq %>&nbsp;&nbsp;</td>
        <td style="line-height: 1.0"><%= button_to 'Seq', edit_seq_path(story), class: 'btn btn-sap btn-info hidden-xs',
                    style: "margin-top: -3px; margin-bottom: -15px" %>&nbsp;</td>
        <td><%= u.url_title %>&nbsp;&nbsp;</td>
        <td>&nbsp;&nbsp;<%= link_to 'Show', story %>&nbsp;</td>
        <td><%= link_to 'Edit', edit_story_path(story) %>&nbsp;</td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'All Stories', stories_path %>