<h2>Sign in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, maxlength: 100, autofocus: true %><br>
    <%= f.input :password, required: false, maxlength: 50 %><br>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %><br>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>&nbsp;&nbsp;
    <%= link_to "Forgot your password?", new_password_path(resource_name) %><br><br>
  </div>
<% end %>

<%= link_to "Haven't registered yet? Sign up.", new_user_registration_path %>

<%= render "devise/shared/links" %>
